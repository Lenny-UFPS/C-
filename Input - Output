* Lectura según el tipo de dato (Se usan las mismas para imprimir)

scanf("%d", &value); //int
scanf("%ld", &value); //long y long int
scanf("%c", &value); //char 
scanf("%f", &value); //float
scanf("%lf", &value); //double
scanf("%s", &value); //char*
scanf("%lld", &value); //long long int
scanf("%x", &value); //int hexadecimal
scanf("%o", &value); //int octal

* Impresión de punto flotante con d decimales (ej: d = 6)

printf("%.6lf", value);


//Vaciar el buffer y permitir digitar valores [ fflush(stdin); ]
//quitar notación científica con cout.precision(cantidad de decimales) e imprimir con cout<<fixed<<"";
